{
  "title": "Send hyper key when presseing caps_lock + spacebar",
  "rules": [
    {
      "description": "Send hyper key when presseing caps_lock + spacebar",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              { "key_code": "caps_lock" },
              { "key_code": "spacebar" }
            ],
            "modifiers": { "optional": ["any"] }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": [
                "left_control",
                "left_option",
                "left_command"
              ]
            }
          ]
        }
      ]
    }
  ]
}

